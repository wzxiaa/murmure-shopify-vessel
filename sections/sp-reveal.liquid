  {% assign short_id = section.id | slice: -3, 3 %}

  /* grid */
  #spro-{{ section.id }}  .spro-container .spro-grid {
    display: grid;
    position: relative;
    z-index: 1;
    height: {{ section.settings.height }}px;
    overflow: hidden;
    gap: 20px;
  }

  @media only screen and (max-width: 800px) {
    #spro-{{ section.id }} .spro-container .spro-grid {
      height: {{ section.settings.mobile_height }}px;
    }
  }

  #spro-{{ section.id }}.spro-active .spro-grid {
    height: auto; 
    padding-bottom: 50px;
  }

  @media only screen and (min-width: 801px) {
    #spro-{{ section.id }} .spro-container .spro-grid {
      display: grid;
      grid-auto-columns: 1fr;
      grid-auto-flow: column;
    }
  }

  @media only screen and (max-width: 800px) {
    #spro-grid-{{ section.id }} .spro-container .spro-grid {
      display: grid;
      grid-template-columns: 1fr;
    }
  }

  #spro-{{ section.id }} .spro-button {
    position: absolute;
    bottom: 0;
    left: 0;
    display: block;
    box-sizing: border-box;
    width: 100%;
    padding: {{ section.settings.button_padding_tb }}px {{ section.settings.button_padding_lr }}px;
    background: transparent;
    background-image: {{section.settings.button_background_color}};
    border-radius: {{ section.settings.button_border_radius }}px;
    color: {{section.settings.button_text_color}};
    font-size: {{ section.settings.text_size }}px;
    border: none;
    z-index: 2;
    cursor: pointer;
    text-align: center;
  }

  #spro-{{ section.id }} .spro-button>div {
    display: inline-grid;
    grid-template-columns: auto auto;
    align-items: center;
  }

  #spro-{{ section.id }} button .spro-show-more {
    display: inline-block;
  }

  #spro-{{ section.id }} button .spro-show-less {
    display: none;
  }

  #spro-{{ section.id }}.spro-active button .spro-show-more {
    display: none;
  }

  #spro-{{ section.id }}.spro-active button .spro-show-less {
    display: inline-block;
  }

  #spro-{{ section.id }} button svg {
    transition: all .25s ease-out;
    transform: rotate(-180deg);
  }

  #spro-{{ section.id }}.spro-active button svg {
    transform: rotate(0);
  }

  {%- endcapture -%} 

  {%- liquid
    assign chunks = sp_content | strip_newlines | split: ' ' | join: ' ' | split: '*/'
    for chunk in chunks
      assign mini = chunk | split: '/*' | first | strip | replace: ': ', ':' | replace: '; ', ';' | replace: '} ', '}' | replace: '{ ', '{' | replace: ' {', '{' | replace: ';}', '}'
      echo mini
    endfor
  %}

