  }

  #spro-{{ section.id }} .spro-headline * {
    text-align: {{ section.settings.text_alignment }};
  }

  @media only screen and (max-width: 800px) {
    #spro-{{ section.id }} .spro-headline * {
      text-align: {{ section.settings.mobile_text_alignment }};
    }
  }

  #spro-{{ section.id }} .spro-container .spro-grid {
    position: relative;
    margin: 0 auto;
    display: block;
    max-width: 1000px;
  }

  #spro-{{ section.id }} .spro-row0, 
  #spro-{{ section.id }} .spro-row {
    display: grid;
    grid-template-columns: 3fr 150px 150px;
    border-bottom: 1px solid {{ section.settings.border_color }};
    gap: 0;
  }

  #spro-{{ section.id }} .spro-row0 *, 
  #spro-{{ section.id }} .spro-row * {
    color: {{ section.settings.text_color }};
  }

  @media only screen and (max-width: 800px) {
    #spro-{{ section.id }} .spro-row0, 
    #spro-{{ section.id }} .spro-row {
      display: grid;
      grid-template-columns: 3fr 100px 100px;
      border-bottom: 1px solid {{ section.settings.border_color }};
      gap: 0;
    }
  }

  #spro-{{ section.id }} .spro-row0>div, 
  #spro-{{ section.id }} .spro-row>div {
    padding: {{ section.settings.cell_padding }}px;
  }

  #spro-{{ section.id }} .spro-row0>div:nth-child(1), 
  #spro-{{ section.id }} .spro-row>div:nth-child(1) {
    text-align: left;
  }

  #spro-{{ section.id }} .spro-row0>div:nth-child(2) {
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    font-weight: bold !important;
  }

  #spro-{{ section.id }} .spro-row0>div:nth-child(2), 
  #spro-{{ section.id }} .spro-row>div:nth-child(2) {
    text-align: center;
    background-color: {{ section.settings.highlight_background }};
  }

  #spro-{{ section.id }} .spro-row0>div:nth-child(3), 
  #spro-{{ section.id }} .spro-row>div:nth-child(3) {
    text-align: center;
  }

  #spro-{{ section.id }} .spro-container .spro-check, 
  #spro-{{ section.id }} .spro-container .spro-x {
    width: 20px;
    height: 20px;
  }

  #spro-{{ section.id }} .spro-container .spro-check g {
    fill: {{ section.settings.check_color }} !important;
  }

  #spro-{{ section.id }} .spro-container .spro-x g {
    fill: {{ section.settings.x_color }} !important;
  }

  {%- endcapture -%} 

  {%- liquid
    assign chunks = sp_content | strip_newlines | split: ' ' | join: ' ' | split: '*/'
    for chunk in chunks
      assign mini = chunk | split: '/*' | first | strip | replace: ': ', ':' | replace: '; ', ';' | replace: '} ', '}' | replace: '{ ', '{' | replace: ' {', '{' | replace: ';}', '}'
      echo mini
    endfor
  %}

