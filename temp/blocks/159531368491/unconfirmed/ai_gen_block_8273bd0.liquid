  @prompt
    scrollable timeline content with image and text
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-timeline-{{ ai_gen_id }} {
    width: 100%;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-timeline-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-timeline-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-timeline-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
  }

  .ai-timeline-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-timeline-scroll-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow-x: auto;
    overflow-y: hidden;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} {{ block.settings.scrollbar_track_color }};
    padding-bottom: 20px;
  }

  .ai-timeline-scroll-wrapper-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-timeline-scroll-wrapper-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: {{ block.settings.scrollbar_track_color }};
    border-radius: 4px;
  }

  .ai-timeline-scroll-wrapper-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background: {{ block.settings.scrollbar_color }};
    border-radius: 4px;
  }

  .ai-timeline-scroll-wrapper-{{ ai_gen_id }}::-webkit-scrollbar-thumb:hover {
    background: {{ block.settings.scrollbar_hover_color }};
  }

  .ai-timeline-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.item_gap }}px;
    padding: 20px 0;
    position: relative;
  }

  .ai-timeline-track-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: {{ block.settings.line_thickness }}px;
    background-color: {{ block.settings.line_color }};
    transform: translateY(-50%);
    z-index: 0;
  }

  .ai-timeline-item-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.item_width }}px;
    position: relative;
    z-index: 1;
  }

  .ai-timeline-dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    background-color: {{ block.settings.dot_color }};
    border: {{ block.settings.dot_border_width }}px solid {{ block.settings.dot_border_color }};
    border-radius: 50%;
    margin: 0 auto {{ block.settings.dot_spacing }}px;
    position: relative;
    z-index: 2;
  }

  .ai-timeline-content-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-timeline-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: 16px;
  }

  .ai-timeline-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-timeline-image-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-timeline-date-{{ ai_gen_id }} {
    font-size: {{ block.settings.date_size }}px;
    color: {{ block.settings.date_color }};
    font-weight: 600;
    margin-bottom: 8px;
  }

  .ai-timeline-item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-timeline-item-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    opacity: 0.9;
  }

  @media screen and (max-width: 749px) {
    .ai-timeline-item-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.item_width | times: 0.8 }}px;
    }

    .ai-timeline-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<timeline-scroll-{{ ai_gen_id }}
  class="ai-timeline-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-timeline-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-timeline-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-timeline-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-timeline-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-timeline-scroll-wrapper-{{ ai_gen_id }}">
      <div class="ai-timeline-track-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign date_key = 'item_' | append: i | append: '_date'
            assign title_key = 'item_' | append: i | append: '_title'
            assign text_key = 'item_' | append: i | append: '_text'
            assign image_key = 'item_' | append: i | append: '_image'

            assign item_date = block.settings[date_key]
            assign item_title = block.settings[title_key]
            assign item_text = block.settings[text_key]
            assign item_image = block.settings[image_key]
          %}

          {% if item_date != blank or item_title != blank or item_text != blank or item_image != blank %}
            <div class="ai-timeline-item-{{ ai_gen_id }}">
              <div class="ai-timeline-dot-{{ ai_gen_id }}"></div>
              <div class="ai-timeline-content-{{ ai_gen_id }}">
                {% if item_image != blank %}
                  <img
                    src="{{ item_image | image_url: width: 600 }}"
                    alt="{{ item_image.alt | escape }}"
                    class="ai-timeline-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="{{ block.settings.image_height }}"
                  >
                {% else %}
                  <div class="ai-timeline-image-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if item_date != blank %}
                  <div class="ai-timeline-date-{{ ai_gen_id }}">{{ item_date }}</div>
                {% endif %}

                {% if item_title != blank %}
                  <h3 class="ai-timeline-item-title-{{ ai_gen_id }}">{{ item_title }}</h3>
                {% endif %}

                {% if item_text != blank %}
                  <div class="ai-timeline-item-text-{{ ai_gen_id }}">{{ item_text }}</div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</timeline-scroll-{{ ai_gen_id }}>

<script>
  (function() {
    class TimelineScroll{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.scrollWrapper = this.querySelector('.ai-timeline-scroll-wrapper-{{ ai_gen_id }}');
        this.setupScrollBehavior();
      }

      setupScrollBehavior() {
        if (!this.scrollWrapper) return;

        let isDown = false;
        let startX;
        let scrollLeft;

        this.scrollWrapper.addEventListener('mousedown', (e) => {
          isDown = true;
          this.scrollWrapper.style.cursor = 'grabbing';
          startX = e.pageX - this.scrollWrapper.offsetLeft;
          scrollLeft = this.scrollWrapper.scrollLeft;
        });

        this.scrollWrapper.addEventListener('mouseleave', () => {
          isDown = false;
          this.scrollWrapper.style.cursor = 'grab';
        });

        this.scrollWrapper.addEventListener('mouseup', () => {
          isDown = false;
          this.scrollWrapper.style.cursor = 'grab';
        });

        this.scrollWrapper.addEventListener('mousemove', (e) => {
          if (!isDown) return;
          e.preventDefault();
          const x = e.pageX - this.scrollWrapper.offsetLeft;
          const walk = (x - startX) * 2;
          this.scrollWrapper.scrollLeft = scrollLeft - walk;
        });

        this.scrollWrapper.style.cursor = 'grab';
      }
    }

    customElements.define('timeline-scroll-{{ ai_gen_id }}', TimelineScroll{{ ai_gen_id }});
  })();
</script>

