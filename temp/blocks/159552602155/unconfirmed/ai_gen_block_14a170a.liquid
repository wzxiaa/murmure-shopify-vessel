{% doc %}
  @prompt
    a vertically scrollable timeline style content for which is suitable for displaying content about the brand in storytelling style. Note: avoid creating card for each block
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-timeline-{{ ai_gen_id }} {
    position: relative;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-timeline-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
  }

  .ai-timeline-line-{{ ai_gen_id }} {
    position: absolute;
    left: {{ block.settings.timeline_position }}px;
    top: 0;
    bottom: 0;
    width: {{ block.settings.line_width }}px;
    background-color: {{ block.settings.line_color }};
  }

  .ai-timeline-item-{{ ai_gen_id }} {
    position: relative;
    padding-left: calc({{ block.settings.timeline_position }}px + {{ block.settings.content_offset }}px);
    margin-bottom: {{ block.settings.item_spacing }}px;
  }

  .ai-timeline-item-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-timeline-marker-{{ ai_gen_id }} {
    position: absolute;
    left: calc({{ block.settings.timeline_position }}px - {{ block.settings.marker_size | divided_by: 2 }}px);
    top: {{ block.settings.marker_top_offset }}px;
    width: {{ block.settings.marker_size }}px;
    height: {{ block.settings.marker_size }}px;
    background-color: {{ block.settings.marker_color }};
    border: {{ block.settings.marker_border_width }}px solid {{ block.settings.marker_border_color }};
    border-radius: 50%;
    z-index: 2;
  }

  .ai-timeline-year-{{ ai_gen_id }} {
    color: {{ block.settings.year_color }};
    font-size: {{ block.settings.year_size }}px;
    font-weight: {{ block.settings.year_weight }};
    margin-bottom: {{ block.settings.year_spacing }}px;
    letter-spacing: 0.5px;
  }

  .ai-timeline-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    margin-bottom: {{ block.settings.title_spacing }}px;
    line-height: 1.3;
  }

  .ai-timeline-content-{{ ai_gen_id }} {
    color: {{ block.settings.content_color }};
    font-size: {{ block.settings.content_size }}px;
    line-height: 1.6;
  }

  .ai-timeline-content-{{ ai_gen_id }} p {
    margin: 0;
  }

  .ai-timeline-image-{{ ai_gen_id }} {
    margin-top: {{ block.settings.image_spacing }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-timeline-image-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media screen and (max-width: 749px) {
    .ai-timeline-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-timeline-line-{{ ai_gen_id }} {
      left: 20px;
    }

    .ai-timeline-item-{{ ai_gen_id }} {
      padding-left: calc(20px + 30px);
    }

    .ai-timeline-marker-{{ ai_gen_id }} {
      left: calc(20px - {{ block.settings.marker_size | divided_by: 2 }}px);
    }

    .ai-timeline-year-{{ ai_gen_id }} {
      font-size: {{ block.settings.year_size | times: 0.85 }}px;
    }

    .ai-timeline-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-timeline-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.content_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-timeline-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-timeline-container-{{ ai_gen_id }}">
    <div class="ai-timeline-line-{{ ai_gen_id }}"></div>

    {% for i in (1..10) %}
      {% liquid
        assign year_key = 'year_' | append: i
        assign title_key = 'title_' | append: i
        assign content_key = 'content_' | append: i
        assign image_key = 'image_' | append: i

        assign year = block.settings[year_key]
        assign title = block.settings[title_key]
        assign content = block.settings[content_key]
        assign image = block.settings[image_key]
      %}

      {% if year != blank or title != blank or content != blank %}
        <div class="ai-timeline-item-{{ ai_gen_id }}">
          <div class="ai-timeline-marker-{{ ai_gen_id }}"></div>

          {% if year != blank %}
            <div class="ai-timeline-year-{{ ai_gen_id }}">{{ year }}</div>
          {% endif %}

          {% if title != blank %}
            <h3 class="ai-timeline-title-{{ ai_gen_id }}">{{ title }}</h3>
          {% endif %}

          {% if content != blank %}
            <div class="ai-timeline-content-{{ ai_gen_id }}">
              {{ content }}
            </div>
          {% endif %}

          {% if image != blank %}
            <div class="ai-timeline-image-{{ ai_gen_id }}">
              <img
                src="{{ image | image_url: width: 800 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
              >
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

